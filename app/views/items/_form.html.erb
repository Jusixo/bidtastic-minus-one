<div class="container">
  <%= form_for [@auction, @item], html: { class: "form-horizontal", role: "form" } do |f| %>
    <% if @item.errors.any? %>
      <div class="alert alert-danger alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4><%= pluralize(@item.errors.count, "error") %> prohibited this auction from being saved:</h4>

        <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :image, class: "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.hidden_field :image, value: @item.cached_image_data%>
        <%= f.file_field :image %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :lot_number, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :lot_number, class: "form-control" %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :starting_bid, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :starting_bid, class: "form-control" %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :bid_increment, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :bid_increment, class: "form-control" %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :category, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :category, class: "form-control" %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :description, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :description, class: "form-control" %>
      </div>
    </div>


    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

</div>
