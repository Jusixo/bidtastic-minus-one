<div class="page-header">
  <%= link_to items_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_item_path(@item), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show item</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @item.name %></dd>

  <dt>Description:</dt>
  <dd><%= @item.description %></dd>

  <dt>Image:</dt>
  <dd><%= image_tag(@item.image_url(:small)) %></dd>

  <dt>Lot Number:</dt>
  <dd><%= @item.lot_number %></dd>

  <dt>Starting Bid:</dt>
  <dd><%= @item.starting_bid %></dd>

  <dt>Bid Increment:</dt>
  <dd><%= @item.bid_increment %></dd>

  <dt>Category:</dt>
  <dd><%= @item.category %></dd>

</dl>
