<div class="page-header">
  <%= link_to auction_items_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_auction_item_path(@auction, @item), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1><%= @item.name %></h1>
</div>


<div class="container-fluid">

  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12">
      <div class="thumbnail">
        <%= image_tag(@item.image_url(:large)) %>
        <div class="caption">
          <h3>
            Category:
            <%= @item.category %>
          </h3>
          <h3>
            Lot Number:
            <%= @item.lot_number %>
          </h3>
          <h3>
            Starting Bid:
            <%= @item.starting_bid %>
          </h3>
          <h3>
            Description:
            <%= @item.description %>
          </h3>
        </div>
      </div>
    </div>
  </div>
  <div class="well well-md">
    <div id="timer" data-auction-date="<%= @auction.date %>">
      <span id="hours"></span>hours
      <span id="minutes"></span>minutes
      <span id="seconds"></span>seconds
    </div>
  </div>
</div>

<div class="page-footer">
  <div class="row">
    <div class="col-lg-6">
      <div class="input-group">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button">BID</button>
        </span>
        <input type="text" class="form-control" placeholder="<%= @item.bid_increment %>">
      </div><!-- /input-group -->
    </div><!-- /.col-lg-6 -->
    <div class="col-lg-6">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="<%= @item.bid_increment %>">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button">BID</button>
        </span>
      </div><!-- /input-group -->
    </div><!-- /.col-lg-6 -->
  </div><!-- /.row -->
</div>
