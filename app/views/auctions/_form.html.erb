<%= form_for(@auction, html: { class: "form-horizontal", role: "form" }) do |f| %>

  <%# Alert showing errors for this form %>
  <% if @auction.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@auction.errors.count, "error") %> prohibited this auction from being saved:</h4>

      <ul>
      <% @auction.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%# name_of_event %>
  <div class="form-group">
    <%= f.label :name_of_event, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name_of_event, class: "form-control" %>
    </div>
  </div>


  <%# organization %>
  <div class="form-group">
    <%= f.label :organization, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :organization, class: "form-control" %>
    </div>
  </div>


  <%# image_data %>
  <div class="form-group">
    <%= f.label :image, class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.hidden_field :image, value: @auction.cached_image_data%>
      <%= f.file_field :image %>
    </div>
  </div>


  <%# date %>
  <div class="form-group">
    <%= f.label :date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :date, class: "form-control" %>
    </div>
  </div>


  <%# start_time %>
  <div class="form-group">
    <%= f.label :start_time, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :start_time, class: "form-control" %>
    </div>
  </div>


  <%# duration %>
  <div class="form-group">
    <%= f.label :duration, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :duration, class: "form-control" %>
    </div>
  </div>


  <%# description %>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>


  <%# Submit %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end -%>
