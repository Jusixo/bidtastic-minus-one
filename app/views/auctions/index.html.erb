<%- if logged_in? %>
  <%- if current_user.admin? %>
    <div>
      <%= link_to new_auction_path, class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-plus"></span>
           New Auction
      <%- end %>
    </div>
  <%- end %>
<%- end %>

<div class="container-fluid container-item">
  <%- @auctions.each do |auction| %>
    <div class="col-xs-12 col-md-4 col-auction">
      <ul class="media-list">
          <li class="media">
            <%= link_to auction_items_path(auction) do %>
              <%- if auction.image_url(:large) %>
                <div class="media">
                  <%= image_tag(auction.image_url(:medium)) %>
                </div>
              <%- end %>
            <%- end %>
            <div class="media-body">
              <h4 class="media-heading"> <%= auction.name_of_event %> <span><p> <%= auction.date %></p></span></h4>
                <p><%= auction.start_time %></p>
                <p><%= auction.description %></p>
                <p><%= auction.organization %></p>
            </div>
          </li>
      </ul>
    </div>
  <%- end %>
</div>
