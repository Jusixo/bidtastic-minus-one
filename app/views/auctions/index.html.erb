<div class="page-header">
  <%= link_to new_auction_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Auction
  <% end %>
  <h1 Listing>auctions</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name of event</th>
        <th>Organization</th>
        <th>Image data</th>
        <th>Date</th>
        <th>Start time</th>
        <th>Duration</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-body">
      <%- @auctions.each do |auction| %>
      <tr>
        <td><%= auction.name_of_event %></td>
        <td><%= auction.organization %></td>
        <td><%= auction.image_data %></td>
        <td><%= auction.date %></td>
        <td><%= auction.start_time %></td>
        <td><%= auction.duration %></td>
        <td><%= auction.description %></td>
        <td>
          <%= link_to auction do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_auction_path(auction) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to auction, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
